{
  "name": "pdf-ocr-ts",
  "version": "1.0.28",
  "description": "Javascript-only library to perform OCR on scanned PDFs to turn them into searchable PDFs",
  "main": "./build/PdfOcr.js",
  "dependencies": {
    "canvas": "^3.2.1",
    "jimp": "^1.6.0",
    "pdf-lib": "^1.17.1",
    "pdf-ocr-ts": "file:",
    "pdfjs-dist": "4.10.38",
    "prettier": "^3.2.5",
    "punycode": "^2.3.1",
    "rimraf": "^6.1.0",
    "tesseract.js": "^5.0.5",
    "ts-jest": "^29.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-typescript": "^7.24.7",
    "@swc/core": "^1.3.70",
    "@swc/jest": "^0.2.27",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-esm-transformer": "^1.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "test": "jest --coverage --detectOpenHandles --forceExit --transformIgnorePatterns \"node_modules/(?!pdfjs-dist)/\"",
    "test:watch": "jest --watch",
    "build": "rimraf ./build && tsc",
    "start": "npx ts-node ./src/ocrMyPdf.ts",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastianheide/pdf-ocr-ts.git"
  }
